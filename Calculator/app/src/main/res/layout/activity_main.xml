<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="32dp"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        tools:text="35+12" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="32dp"
        android:textColor="@android:color/black"
        android:textSize="48sp"
        tools:text="47" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5">

        <Button style="@style/SpecialButtonStyle" android:id="@+id/btnAC" android:text="AC"/>
        <Button style="@style/SpecialButtonStyle" android:id="@+id/btnC" android:text="C"/>
        <Button style="@style/SpecialButtonStyle" android:text="%" android:id="@+id/btnPercent"/>
        <Button style="@style/OperatorButtonStyle" android:text="/" android:id="@+id/btnDivide"/>

        <Button style="@style/NumberButtonStyle" android:text="7" android:id="@+id/btn7"/>
        <Button style="@style/NumberButtonStyle" android:text="8" android:id="@+id/btn8"/>
        <Button style="@style/NumberButtonStyle" android:text="9" android:id="@+id/btn9"/>
        <Button style="@style/OperatorButtonStyle" android:text="*" android:id="@+id/btnMultiply"/>

        <Button style="@style/NumberButtonStyle" android:text="4" android:id="@+id/btn4"/>
        <Button style="@style/NumberButtonStyle" android:text="5" android:id="@+id/btn5"/>
        <Button style="@style/NumberButtonStyle" android:text="6" android:id="@+id/btn6"/>
        <Button style="@style/OperatorButtonStyle" android:text="-" android:id="@+id/btnSubtract"/>

        <Button style="@style/NumberButtonStyle" android:text="1" android:id="@+id/btn1"/>
        <Button style="@style/NumberButtonStyle" android:text="2" android:id="@+id/btn2"/>
        <Button style="@style/NumberButtonStyle" android:text="3" android:id="@+id/btn3"/>
        <Button style="@style/OperatorButtonStyle" android:text="+" android:id="@+id/btnAdd"/>

        <Button style="@style/NumberButtonStyle" android:id="@+id/btn00" android:text="00"/>
        <Button style="@style/NumberButtonStyle" android:id="@+id/btn0" android:text="0"/>
        <Button style="@style/NumberButtonStyle" android:text="." android:id="@+id/btnDot"/>
        <Button style="@style/OperatorButtonStyle" android:text="=" android:id="@+id/btnEquals"/>
    </GridLayout>
</LinearLayout>