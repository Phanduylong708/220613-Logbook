<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.SimpleCalculator" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.SimpleCalculator" parent="Base.Theme.SimpleCalculator" />

    <style name="CalculatorButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="NumberButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/number_button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="OperatorButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/operator_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpecialButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/special_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>